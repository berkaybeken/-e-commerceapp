{
  "name": "mobiversite-shop",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start -p 3000",
    "seed": "node server/seed.js",
    "reset:db": "rm -f server/db.json && node server/seed.js",
    "json": "json-server --watch server/db.json --port 4001",
    "dev:all": "concurrently \"npm:json\" \"next dev\"",
    "lint": "next lint",
    "format": "prettier --write ."
  },
  "dependencies": {
    "@uidotdev/usehooks": "^2.4.1",
    "axios": "^1.12.2",
    "cookie": "^1.0.2",
    "json-server": "^1.0.0-beta.3",
    "next": "15.5.4",
    "react": "19.2.0",
    "react-dom": "19.2.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.14",
    "@types/node": "24.7.0",
    "@types/react": "19.2.2",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.1",
    "eslint": "^9.37.0",
    "eslint-config-next": "^15.5.5",
    "eslint-config-prettier": "^10.1.8",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.7.0",
    "tailwindcss": "^4.1.14",
    "typescript": "5.9.3"
  }
}
